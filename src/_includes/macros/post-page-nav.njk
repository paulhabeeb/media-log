{% from 'macros/post-title.njk' import postTitle %}

{% macro postPageNav(nextPost, previousPost) %}
    {% if nextPost or previousPost %}
        <ul class="postNav">
            <li class="postNav-previous">
                {% if previousPost %}
                    <a href="{{ previousPost.url | url }}">&laquo; Previous</a>
                    <span class="postNav-title">{{ postTitle(previousPost.data.title, previousPost.data.season, previousPost.data.episode) }}</span>
                {% endif %}
            </li>
            <li class="postNav-next">
                {% if nextPost %}
                    <span class="postNav-title">{{ postTitle(nextPost.data.title, nextPost.data.season, nextPost.data.episode) }}</span>
                    <a href="{{ nextPost.url | url }}">Next &raquo;</a>
                {% endif %}
            </li>
        </ul>
    {% endif %}
{% endmacro %}
