{
    "name": "input-log",
    "version": "2.0.1",
    "description": "A log of everything I watch and read.",
    "author": "Paul Habeeb",
    "private": true,
    "browserslist": [
        "defaults",
        "IE 10",
        "IE 11"
    ],
    "scripts": {
        "build": "cross-env NODE_ENV=production npm-run-all -l clean build:*",
        "build:webpack": "webpack",
        "build:eleventy": "npx @11ty/eleventy",
        "clean": "rimraf _site src/_includes/assets",
        "dev": "cross-env NODE_ENV=development npm-run-all -l clean --parallel dev:*",
        "dev:eleventy": "npx @11ty/eleventy --serve",
        "dev:webpack": "webpack --watch",
        "lint": "npm-run-all -l lint:*",
        "lint:js": "eslint .",
        "lint:sass": "stylelint src/assets/scss/*.scss",
        "lint2:njk": "djlint src --lint --profile=nunjucks --extension njk",
        "release": "dotenv release-it"
    },
    "devDependencies": {
        "@11ty/eleventy": "^1.0.2",
        "@11ty/eleventy-navigation": "^0.3.5",
        "@11ty/eleventy-plugin-rss": "^1.2.0",
        "@babel/core": "^7.20.5",
        "@babel/preset-env": "^7.20.2",
        "@supabase/supabase-js": "^2.1.3",
        "autoprefixer": "^10.4.13",
        "babel-loader": "^9.1.0",
        "cross-env": "^7.0.3",
        "css-loader": "^6.7.2",
        "dotenv": "^16.0.3",
        "dotenv-cli": "^6.0.0",
        "eslint": "^8.29.0",
        "eslint-config-prettier": "^8.5.0",
        "html-minifier": "^4.0.0",
        "luxon": "^3.1.1",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.19",
        "postcss-loader": "^7.0.2",
        "pug-plugin": "^4.5.0",
        "rimraf": "^3.0.2",
        "sass": "^1.56.2",
        "sass-loader": "^13.2.0",
        "slugify": "^1.6.5",
        "style-loader": "^3.3.1",
        "stylelint": "^14.16.0",
        "stylelint-config-prettier-scss": "0.0.1",
        "stylelint-config-standard-scss": "^6.1.0",
        "webpack": "^5.75.0",
        "webpack-cli": "^5.0.1",
        "webpack-manifest-plugin": "^5.0.0"
    },
    "release-it": {
        "git": {
            "changelog": "npx auto-changelog --stdout --commit-limit false --unreleased --template https://raw.githubusercontent.com/release-it/release-it/master/templates/changelog-compact.hbs",
            "commitMessage": "Releasing v${version}",
            "tagName": "v${version}"
        },
        "github": {
            "release": true,
            "releaseName": "v${version}",
            "tokenRef": "GITHUB_TOKEN"
        },
        "hooks": {
            "after:bump": "npx auto-changelog -p --commit-limit false --template changelog-template.hbs --ignore-commit-pattern \"^(Releasing v.*)\""
        },
        "npm": {
            "publish": false
        }
    }
}
